/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.wrapper {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content {
  padding-left: 20rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  transition: all 0.4s;
  -webkit-transition: all 0.4s;
}
.del {
  width: 90px;
  font-size: 16px;
  text-align: center;
  background: #b44141;
  color: #fff;
  transform: translateX(90px);
  -webkit-transform: translateX(90px);
  transition: all 0.6s;
  -webkit-transition: all 0.6s;
}

.touch-move-active .del {
  transform: translateX(0);
  -webkit-transform: translateX(0);
}