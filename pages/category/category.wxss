.content {
	height: 100%;
}
.fixedTop {
	position: fixed;
	top: 0;
	left:0;
	width: 100%;
	z-index: 100;
}
.searchGroup {
	display: flex;
	background: #fff;
	align-items: center;
	padding: 20rpx 20rpx;
	justify-content: space-between;
	z-index: 100;
}
.searchBox {
	width: 80%;
	display: flex;
	align-items: center;
	background: #e9e9e9;
	border-radius: 40rpx;
	padding: 10rpx 20rpx;
}
.search {
	margin: 0 10rpx;
}
.icon {
	width: 30rpx;
	height: 30rpx;
	font-size: 30rpx;
	color: #333;
}
.cate-wrapper {
	overflow: hidden;
}
.cate-wrapper scroll-view::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}
.cate-list {
	float:left;
	width: 200rpx;
}
.cate-item {
	box-sizing: border-box;
	height: 80rpx;
	line-height:80rpx;
	text-align: center;
	border-left: 10rpx solid transparent;
}
.cate-item.select {
	border-left: 10rpx solid #ff4500;
}
.cate-detail {
	float: right;
	width: 550rpx;
	/* height: 1124rpx; */
	margin-bottom: 96rpx;
}
.searchBtn {
	padding:  16rpx;
	color: #333;
	text-align: center;
	cursor: pointer;
}
.goodsItem {
	display: flex;
	box-sizing: border-box;
	height: 160rpx;
	border-bottom: 1px solid #eee;
	padding: 20rpx 10rpx;
	overflow:hidden;
}
.cate-detail:ntn-child(-2) {
	border-bottom: 0;
}
.goodsImg {
	width: 120rpx;
	height: 120rpx;
	border-radius: 8rpx;
	background: #e9e9e9;
	margin-right: 10rpx;
}
.goodsInfo {
	flex: 1;
}
.goodsName {
	margin-bottom: 40rpx;
}
.priceGroup {
	overflow: hidden;
}
.priceNum {
	float: left;
}
.price {
	color: #ff4500;
	margin-right: 10rpx;
}
.oriPrice {
	text-decoration: line-through;
}
.num-operate-group {
	float: right;
}
.numOperate {
	float:right;
	font-size:40rpx;
	width: 40rpx;
	height: 40rpx;
	color: #ff4500;
	line-height: 40rpx;
	text-align: center;
	margin: 0 15rpx
}
.num-hide {
	display: none;
}
.load-end {
	position: relative;
	text-align: center;
	color: #666;   
	padding: 10rpx;
}
.load-end text:before, .load-end text:after {
	position: absolute;
	top: 50%;
	height: 1px;
	width: 30%;
	content: '';
	background: #ddd;
}
.load-end text:before {
	left: 0;
}
.load-end text:after {
	right:0;
}
.dpnone {
	display: none;
}
.ft32 {
	font-size:32rpx;
}
.animate {
	position: fixed;
	top: 0;
	left: 0;
	opacity: 0;
}

@keyframes runTop {
	0% {
		top: var(--startTop);
		opacity: 1;
	}
	90% {
		opacity: 1;
	}
	100% {
		top: var(--endTop);
		opacity: 0;
	}
}

@keyframes runLeft {
	0% {
		left: var(--startLeft);
		opacity: 1;
	}
	90% {
		opacity: 1;
	}
	100% {
		left: var(--endLeft);
		opacity: 0;
	}
}

.shopcart-wrapper {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	z-index: 1006;
}
.mask {
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	background: rgba(0,0,0,0.4);
	z-index: 1004;
}
.info {
	position: absolute;
	bottom: 96rpx;
	width: 100%;
	background: #fff;
	z-index: 1005;
	transform: translateY(300px);
}
.header {
	padding: 28rpx;
	border-bottom: 1rpx solid #eee;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background: #eee;
}
.shopcart-wrapper .list {
	max-height: 360rpx;
	overflow: scroll;
}
.shopcart-wrapper .item {
	border-bottom: 1rpx solid #eee;
	padding: 28rpx 40rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.shopcart-wrapper .operate {
	position: relative;
	height: 96rpx;
	z-index: 1006;
	display: flex;
	justify-content: end;
	align-items: center;
	background: #fff;
}
.icon-group {
	position: relative;
	left: 20rpx;
	bottom: 5rpx;
	margin-right: 30rpx;
}
.icon-group .icon {
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
	background: yellow;
}
.icon-group image {
	width: 110rpx;
	height: 110rpx;
}
.icon-group .num {
	position: absolute;
	top: 0;
	right: 0;
	color: #fff;
	width: 40rpx;
	height: 40rpx;
	padding: 5rpx;
	font-size: 30rpx;
	border-radius: 50%;
	text-align: center;
}
.distributionFee {
	flex: 1;
	padding-left: 10rpx;
}
.confirm-select {
	text-align: center;
	color: #fff;
	width: 260rpx;
	height: 100%;
	line-height: 96rpx;
}
.size30 {
	font-size: 30rpx;
}
.size34 {
	font-size: 34rpx;
}
.size28 {
	font-size: 28rpx;
}
.themebg {
	background-color: #ff4500;
}

