page {
  background: #eee;
}
.fr {
  float: right;
}
.mr20 {
  margin-right: 20rpx;
}
.themegray {
  color: #333;
}
.infoGroup {
  display: flex;
  padding: 20rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  margin-bottom: 20rpx;
}
.infoBox {
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  justify-content: space-between;
  height: 120rpx;
  line-height: 60rpx;
  padding: 30rpx;
  font-size: 26rpx;
  color: #666;
}
.infoBox .name, .infoBox .phone {
  flex: 0 0 50%;

}
.infoGroup .icon {
  width: 40rpx;
  height: 40rpx;
  font-size: 40rpx;
  flex: 0 0 40rpx;
}
.address {
  width: 100%;
}
.list {
  background: #fff;
}
.item {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.goods-image {
  width: 150rpx;
  height: 150rpx;
  flex: 0 0 150rpx;
  background: #eee;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.goods-name {
  width: 50%;
  height: 84rpx;
  overflow: hidden;
  display: webkit-box;
  line-clamp: 2;
  word-break: break-all;
  text-overflow: ellipsis;
}
.goods-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.goods-info .info {
  text-align: right;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
  background: #fff;
}
.submit {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background: #ff4500;
}