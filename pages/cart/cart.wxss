
page {

}
.content{
  height: 100%;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.header {
  border-bottom: 1px solid #e9e9e9;
  padding: 20rpx 0;
  width: 100%;
  overflow: hidden;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
  font-size: 40rpx;
}
.list {
  width: 100%;
  margin-top: 20rpx;
  padding: 10rpx;
  margin-bottom: 100rpx;
}
.item {
  display: flex;
  align-items: center;
  padding: 10rpx;
}
.details {
  display: flex;
  width: 100%;
  align-items: center;
}
.goodsImg {
  flex: 0 0 120rpx;
  width: 120rpx;
  height:120rpx;
  border-radius: 8rpx;
  background: #e9e9e9;
  margin-right: 20rpx;
}
.details .wrapper {
  flex: 1;
}
.details .desc {
  color: #666;
  margin-bottom: 30rpx;
}
.details .fx-box {
  overflow: hidden;
}
.details .fx-box .num {
  color: #ff4500;
}
.numOperate {
  float: right;
  margin: 0 15rpx;
  width: 40rpx;
  height: 40rpx;
  font-size: 40rpx;
  color: #ff4500;
  text-align: center;
  line-height: 40rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 1px solid #e9e9e9;
  overflow: hidden;
}
.footer .allSelect {  
  flex: 0 0 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  font-size: 30rpx;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
  font-size: 40rpx;
}
.footer .total {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}
.footer .account {
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 100%;
  line-height: 96rpx;
  text-align: center;
  color: #fff;
}
.theme-success {
  background: #ff4500;
}
.theme-default {
  background: #999;
}
.size26 {
  font-size: 26rpx;
}
.size30 {
  font-size: 30rpx;
}
.size20 {
  font-size: 20rpx;
}
.link {
  color: blue;
}